{
	"extends": "@isentinel/tsconfig/typescript",
	"compilerOptions": {
		"libReplacement": true,
		"erasableSyntaxOnly": false,
		"plugins": [
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"]
			},
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"],
				"afterDeclarations": true
			}
		]
	}
}
